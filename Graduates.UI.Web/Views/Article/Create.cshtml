@model Graduates.ViewModel.ViewModels.ArticleVM

<form id="form" method="post" asp-action="create" asp-antiforgery="true" class="form-horizontal">

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Title"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="Title" name="title" class="form-control" type="text" autocomplete="off" placeholder="Title" v-model="vm.article.title" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="SubTitle"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="SubTitle" name="subTitle" class="form-control" type="text" autocomplete="off" placeholder="Sub Title" v-model="vm.article.subTitle" />
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Content"></label>
        <div class="col-md-10 col-sm-10">
            <textarea class="ckeditor" id="Content" name="content" v-model="vm.article.content" rows="20"></textarea>
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="ArticleCategoryId"></label>
        <div class="col-md-10 col-sm-10">
            <select class="form-control" name="articleCategoryId" v-model="vm.article.articleCategoryId">
                <option value="">Article Category </option>
                <option v-bind:value="articleCategory.id" v-for="articleCategory in vm.articleCategories">
                    {{articleCategory.name}}
                </option>
            </select>
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="ThumbNailPath"></label>
        <div class="col-md-8 col-sm-8">
            <input type="file" id="thumbNailPath" onchange="getThumbNail(event)" />
        </div>
        <div class="col-md-2 col-sm-2">
            <a href="javascript:;" onclick="openThumbNailDialog()">View Image</a>
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="BigImagePath"></label>
        <div class="col-md-8 col-sm-8">
            <input type="file" id="bigImagePath" onchange="getBigImageURL(event)" />
        </div>
        <div class="col-md-2 col-sm-2">
            <a href="javascript:;" onclick="openBigImageDialog()">View Image</a>
        </div>
    </div>


    <button id="sub-btn" style="display:none" type="submit" class="btn btn-success">Submit</button>

</form>


<!-- #modal-dialog -->
<div class="modal fade" id="modal-dialog-inner">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Image</h4>
                <button id="dismissTop" onclick="dismissImageModal()" type="button" class="close" aria-hidden="true">×</button>
            </div>
            <div id="modal-body" class="modal-body">
                <div id="image-display" class="row"></div>
            </div>
            <div class="modal-footer">
                <a href="javascript:;" id="dismissBottom" onclick="dismissImageModal()" class="btn btn-white">Close</a>
            </div>
        </div>
    </div>
</div>



<script>
    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.
    CKEDITOR.replace();
</script>
