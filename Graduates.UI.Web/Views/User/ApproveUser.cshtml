@model Graduates.ViewModel.ViewModels.UserVM

<form id="form" method="post" asp-action="create" asp-antiforgery="true" class="form-horizontal">

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="FirstName"></label>
        <div class="col-md-9 col-sm-9">
            <input asp-for="FirstName" name="name" class="form-control" type="text" autocomplete="off" placeholder="FirstName" v-model="vm.user.firstName" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="LastName"></label>
        <div class="col-md-9 col-sm-9">
            <input asp-for="LastName" name="name" class="form-control" type="text" autocomplete="off" placeholder="LastName" v-model="vm.user.lastName" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="UserName"></label>
        <div class="col-md-9 col-sm-9">
            <input asp-for="UserName" name="name" class="form-control" type="text" autocomplete="off" placeholder="UserName" v-model="vm.user.userName" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="Email"></label>
        <div class="col-md-9 col-sm-9">
            <input asp-for="Email" name="email" class="form-control" type="email" autocomplete="off" placeholder="Email" v-model="vm.user.email" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="PhoneNumber"></label>
        <div class="col-md-9 col-sm-9">
            <input asp-for="PhoneNumber" name="phoneNumber" class="form-control" type="text" autocomplete="off" placeholder="PhoneNumber" v-model="vm.user.phoneNumber" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="@Model.Role"></label>
        <div class="col-md-9 col-sm-9">
            <select class="form-control" autocomplete="off" name="role" v-model="vm.user.role">
                <option value="">Select Role</option>
                <option v-bind:value="role.id" v-for="role in vm.roles">{{role.name}}</option>
            </select>
        </div>
    </div>

    <button id="sub-btn" style="display:none" type="submit" class="btn btn-success">Submit</button>

</form>


