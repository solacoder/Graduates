                var activeParentLink = $(this).find('span').text();
                body.find('#activeParentLink').text(activeParentLink);
                body.find('#activeParentHeader').text(activeParentLink);
            });


            dashboardLink.click(function (e) {
                e.preventDefault();
                var activeChildLink = "";
                body.find('#activeChildLink').text(activeChildLink);
                body.find('main').addClass('active');
                var url = $(this).attr('href');
                console.log(url)
                $.ajax({
                    url: url,
                    dataType: "html",
                    beforeSend: function () {
                        $('main').empty().removeClass('auto-height');
                        $('main').html('<img id="loader-img" alt="" src="assets/img/Ajax2.gif" width="50" height="50" style="position: absolute; right: 41%; top: 55vh;" />');
                    },
                    success: function (data) {
                        $('main').html(data).addClass('auto-height');
                    }
                });
            })

            brandLink.click(function (e) {
                e.preventDefault();
                var activeChildLink = "";
                body.find('#activeChildLink').text(activeChildLink);
                body.find('main').addClass('active');
                var url = $(this).attr('href');
                console.log(url)
                $.ajax({
                    url: url,
                    dataType: "html",
                    beforeSend: function () {
                        $('main').empty().removeClass('auto-height');
                        $('main').html('<img id="loader-img" alt="" src="assets/img/Ajax2.gif" width="50" height="50" style="position: absolute; right: 41%; top: 55vh;" />');
                    },
                    success: function (data) {
                        $('main').html(data).addClass('auto-height');
                    }
                });
            })

            sidebarChildLink.click(function (e) {
                e.preventDefault();
                var activeChildLink = $(this).text();
                setPageTitle(activeChildLink, activeChildLink);
                body.find('#activeChildLink').text(activeChildLink);
                body.find('main').addClass('active');
                var url = $(this).attr('href');
                $.ajax({
                    url: url,
                    async: true,
                    dataType: "html",
                    beforeSend: function () {
                        $('main').empty().removeClass('auto-height');
                        $('main').html('<img id="loader-img" alt="" src="assets/img/Ajax2.gif" width="50" height="50" style="position: absolute; right: 41%; top: 55vh;" />');
                    },
                    success: function (data) {
                        $('main').html(data).addClass('auto-height');
                    }
                });
            })

            function setPageTitle(header, smallHeader) {
                let headerSmallText = `  <small>${smallHeader}</small>`;
                pageTitle.text(header).append(headerSmallText);
            }

        });
        

