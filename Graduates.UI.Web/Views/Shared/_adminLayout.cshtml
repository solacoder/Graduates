            var brandLink = body.find('div#nav > a');
            var dashboardLink = body.find('ul#sidemenuNav > li#dashboard > a');
            var sidebarChildLink = body.find('ul#sidemenuNav > li > a + ul > li > a');
            var pageTitle = body.find('div#content > h1.page-header');

