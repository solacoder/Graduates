@model Graduates.ViewModel.ViewModels.ScholarshipVM

<form id="form" method="post" asp-action="create" asp-antiforgery="true" class="form-horizontal">

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="Name" name="name" class="form-control" type="text" autocomplete="off" placeholder="Name" v-model="vm.scholarship.name" />
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Website"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="Website" name="website" class="form-control" type="text" autocomplete="off" placeholder="Website" v-model="vm.scholarship.website" />
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="Email" name="email" class="form-control" type="text" autocomplete="off" placeholder="Email" v-model="vm.scholarship.email" />
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Phone"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="Phone" name="phone" class="form-control" type="text" autocomplete="off" placeholder="Phone" v-model="vm.scholarship.phone" />
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Sponsor"></label>
        <div class="col-md-10 col-sm-10">
            <input asp-for="Sponsor" name="sponsor" class="form-control" type="text" autocomplete="off" placeholder="Sponsor" v-model="vm.scholarship.sponsor" />
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Audience"></label>
        <div class="col-md-10 col-sm-10">
            <textarea class="ckeditor" id="Audience" name="audience" v-model="vm.scholarship.audience" rows="10"></textarea>
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Requirements"></label>
        <div class="col-md-10 col-sm-10">
            <textarea class="ckeditor" id="Requirements" name="requirements" v-model="vm.scholarship.requirements" rows="10"></textarea>
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="Interests"></label>
        <div class="col-md-10 col-sm-10">
            <textarea class="ckeditor" id="Interests" name="interests" v-model="vm.scholarship.interests" rows="10"></textarea>
        </div>
    </div>
    <div class="form-group row m-b-15">
        <label class="col-md-2 col-sm-2 col-form-label" asp-for="HowToApply"></label>
        <div class="col-md-10 col-sm-10">
            <textarea class="ckeditor" id="HowToApply" name="howToApply" v-model="vm.scholarship.howToApply" rows="10"></textarea>
        </div>
    </div>


    <button id="sub-btn" style="display:none" type="submit" class="btn btn-success">Submit</button>

</form>


<!-- #modal-dialog -->
<div class="modal fade" id="modal-dialog-inner">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Image</h4>
                <button id="dismissTop" onclick="dismissImageModal()" type="button" class="close" aria-hidden="true">×</button>
            </div>
            <div id="modal-body" class="modal-body">
                <div id="image-display" class="row"></div>
            </div>
            <div class="modal-footer">
                <a href="javascript:;" id="dismissBottom" onclick="dismissImageModal()" class="btn btn-white">Close</a>
            </div>
        </div>
    </div>
</div>



<script>
    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.
    CKEDITOR.replace();
</script>
