@model Graduates.ViewModel.ViewModels.SetupNameVM

<form id="form" method="post" asp-action="create" asp-antiforgery="true" class="form-horizontal">

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="Name"></label>
        <div class="col-md-9 col-sm-9">
            <input asp-for="Name" name="name" class="form-control" type="text" autocomplete="off" placeholder="Name" v-model="vm.setupName.name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row m-b-15">
        <label class="col-md-3 col-sm-3 col-form-label" asp-for="ParentId"></label>
        <div class="col-md-9 col-sm-9">
            <select class="form-control" name="parentId" v-model="vm.setupName.parentId">
                <option value="0">Select Parent</option>
                <option v-bind:value="setupName.id" v-for="setupName in vm.setupNames">
                    {{setupName.name}}
                </option>
            </select>
            <span asp-validation-for="ParentId" class="text-danger"></span>
        </div>
    </div>

    
    <button id="sub-btn" style="display:none" type="submit" class="btn btn-success">Submit</button>
    

</form>
